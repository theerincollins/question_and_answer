<div class="container">
  <h1>{{title}}</h1>

{{#if isEditing}}
  <div class="form-group">
    <label for="title">Title</label>
    {{input value=title id="title" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{input value=body id="body" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
{{else}}

<h1>{{author}} asks:</h1>
<h1>{{body}}</h1>
<button class="btn btn-primary" {{action 'edit'}}>Edit Question</button>
<button class="btn btn-danger" {{action 'delete'}}>Delete Question</button>
<p>{{#link-to 'answer' this class="btn btn-default"}}See Answers{{/link-to}}</p>
{{outlet}}

<p>{{#link-to 'new-answer' this class="btn btn-default"}}Add an Answer{{/link-to}}</p>





{{/if}}
</div>
